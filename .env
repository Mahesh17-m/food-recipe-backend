# .env.example
# Copy this file to .env and fill in your credentials

# Server Configuration
NODE_ENV=production
PORT=3000

# MongoDB Atlas (Get from MongoDB Dashboard)
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secrets (Generate using: openssl rand -base64 32)
JWT_SECRET=generate_strong_secret_here
JWT_REFRESH_SECRET=generate_another_strong_secret_here

# Google OAuth (From Google Cloud Console)
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here

# HuggingFace AI (From huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=your_hf_api_key_here

# Frontend URL (Update after deploying frontend)
BASE_URL=https://food-recipe-backend-yqx9.onrender.com
CLIENT_URL=https://food-recipe-frontend-rust.vercel.app
CLOUDINARY_CLOUD_NAME=your_actual_cloud_name
CLOUDINARY_API_KEY=your_actual_api_key
CLOUDINARY_API_SECRET=your_actual_api_secret